BootStrap: docker
From: tensorflow/tensorflow:2.7.0-gpu

%environment
    export PATH=/bin:/usr/bin:/usr/local/bin:/usr/local/cuda/bin:
    export LC_ALL=C

%runscript
    exec python3 /opt/mouse-image-segmentation/run.py "$@"

%post
    # make nih hpc specific links
    mkdir -p /vf /gpfs /spin1 /data /scratch /fdb /lscratch
    for i in $(seq 1 30); do
        ln -s /gpfs/gsfs${i} /gs${i};
    done
